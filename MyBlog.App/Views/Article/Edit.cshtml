@model EditArticleViewModel
@{
	ViewData["Title"] = "Edition-article page";
}

<div class="container-page">
	<h2 class="title-margin">Редактирование статьи:</h2>
	<form method="post" asp-controller="Article" asp-action="Edit"> <div asp-validation-summary="All" class="text-danger"></div>
		<div style="margin-bottom: 5px">
			<label asp-for="Id"></label><br />
			<input class="form-control" readonly="true" asp-for="Id"/>
			<label asp-for="Title"></label><br />
			<input class="form-control" asp-for="Title" />
			<span asp-validation-for="Id" class="text-danger"></span>
			<input class="form-control" readonly="true" asp-for="Id" hidden="true" />
			<span asp-validation-for="Content" class="text-danger"></span>
			<input class="form-control" asp-for="Content"/>
			<span asp-validation-for="Content" class="text-danger"></span>
		</div>
		<table>
			<label>Теги:</label>
			<p />
			@if (Model is not null)
			{
				@for (int i = 0; i < Model?.Tags?.Count; i++)
				{
					<div style="margin-bottom: 10px">
						@Html.CheckBoxFor(model => model.Tags[i].IsSelected)
						<input class="form-control" asp-for="Tags[i].Name" readonly="true" />
						<span asp-validation-for="Tags[i].Name" class="text-danger"></span>
						@Html.HiddenFor(model => model.Tags[i].Id)
					</div>
					<tr />
				}
			}
		</table>
		<div>
			<input class="btn btn-sm btn-primary" type="submit" value="Сохранить" />
		</div>
	</form>
</div>